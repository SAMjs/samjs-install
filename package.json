{
  "name": "samjs-install",
  "description": "A dynamic install server for samjs",
  "version": "0.3.0",
  "repository": "https://github.com/SAMjs/samjs-install",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "main": "lib/plugin.js",
  "bin": {
    "samjs-install": "./cli.js"
  },
  "engines": {
    "node": "*"
  },
  "files": [
    "lib/",
    "cli.js",
    "index.html"
  ],
  "peerDependencies": {
    "samjs-client": "*"
  },
  "dependencies": {
    "ceri": "^1.0.13",
    "ceri-icon": "0.0.3",
    "commander": "^2.9.0",
    "css-loader": "^0.27.3",
    "document-register-element": "^1.4.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "koa": "^2.2.0",
    "koa-hot-dev-webpack": "^0.1.6",
    "koa-static": "^3.0.0",
    "loader-utils": "^1.1.0",
    "style-loader": "^0.16.0",
    "uglify-js": "git://github.com/mishoo/UglifyJS2.git#harmony",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.3"
  },
  "devDependencies": {
    "ceri-loader": "^1.0.0",
    "ceri-compiler": "^1.0.6",
    "node-sass": "^4.5.1",
    "sass-loader": "^6.0.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coffee-script": "^1.12.4",
    "chokidar": "^1.6.1",
    "coffee-loader": "^0.7.3",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "samjs": "^0.3.1",
    "samjs-client": "^0.3.0"
  },
  "keywords": [],
  "readmeFilename": "README.md",
  "scripts": {
    "prebuild": "rimraf lib/",
    "build": "run-npm build:*",
    "build:coffee": "coffee --no-header --compile --output lib/ src/*.coffee",
    "build:ceri": "ceri-compiler --out lib/ lib/client*",
    "build:scss": "webpack --config webpack.config.coffee && rm lib/empty",
    "static": "node ./cli.js dev/bootstrap.coffee",
    "dev:static": "NODE_ENV=production coffee dev/server.coffee",
    "dev": "coffee dev/server.coffee",
    "test": "mocha",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
